{
  "name": "clip-forge-electron",
  "version": "1.0.0",
  "description": "a video editor",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "cd apps/electron && npm run dev",
    "dev:renderer": "cd apps/renderer && npm run dev",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "cd apps/electron && npm run build",
    "build:renderer": "cd apps/renderer && npm run build",
    "package": "cd apps/electron && npm run package",
    "package:mac": "cd apps/electron && npm run package:mac",
    "package:win": "cd apps/electron && npm run package:win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0"
  }
}
