{
	"name": "@clipforge/electron",
	"version": "1.0.0",
	"description": "ClipForge Electron main process",
	"main": "dist/main.js",
	"scripts": {
		"dev": "tsc && electron dist/main.js",
		"build": "tsc",
		"package": "electron-builder",
		"package:mac": "electron-builder --mac",
		"package:win": "electron-builder --win"
	},
	"author": "ClipForge Team",
	"dependencies": {
		"@clipforge/shared": "*"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"electron": "^28.0.0",
		"electron-builder": "^24.0.0",
		"typescript": "^5.3.0"
	},
	"build": {
		"appId": "com.clipforge.app",
		"productName": "ClipForge",
		"directories": {
			"output": "dist-electron"
		},
		"files": [
			"dist/**/*",
			"bin/**/*"
		],
		"mac": {
			"category": "public.app-category.video"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "AppImage"
		}
	}
}